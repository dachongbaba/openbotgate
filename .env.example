# AI Code Gateway Configuration
# Copy this file to .env and fill in your values

# Feishu/Lark App Credentials
FEISHU_APP_ID=your_app_id_here
FEISHU_APP_SECRET=your_app_secret_here
FEISHU_VERIFICATION_TOKEN=your_verification_token_here
# Domain: "feishu" for China, "lark" for international
FEISHU_DOMAIN=feishu

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Execution Settings
EXECUTION_TIMEOUT=120000
MAX_OUTPUT_LENGTH=10000

# OpenCode Server (start with: opencode serve --port 14096)
OPENCODE_SERVER_URL=http://127.0.0.1:14096

# Tool Configuration
TOOL_OPENCODE_ENABLED=true
TOOL_CLAUDE_CODE_ENABLED=true
TOOL_SHELL_ENABLED=false
TOOL_GIT_ENABLED=true
